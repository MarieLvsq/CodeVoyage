@model List<CodeVoyage.Models.Reservation>
@{
    ViewBag.Title = "Formulaire";
    Layout = "_LayoutAdmin";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Liste des offres de voyages</title>
</head>
<body>
    <div class="container mt-3">
        <table class="table">
            <tr>



                <th>

                    NOM

                </th>

                <th>

                    Prenom

                </th>
                <th>

                    Ville

                </th>
                <th>

                    Evenement

                </th>
                <th>

                    Service

                </th>
                <th>

                    ServiceEx

                </th>
                <th>

                    Remise

                </th>
                <th>

                    Prix total

                </th>


                
            </tr>

            @foreach (var reservation in Model)
            {
                <tr>
                    <td>@reservation.Membre.Nom </td>
                    <td>@reservation.Membre.Prenom</td>
                    <td>@reservation.Membre.Localisation</td>
                    <td>@reservation.OffreVoyage.Event.EvenementDescription</td>
                    <td>@reservation.OffreVoyage.Service.ServiceDescription</td>
                    <td>@reservation.OffreVoyage.ServiceEx.ServiceDescription</td>
                    <td>@reservation.OffreVoyage.Remise</td>
                    <td>@reservation.OffreVoyage.prixTotal</td>
                    <td>
                        <form method="get" action="@("/reservation/ModifierReservation/"+reservation.Id)">

                            <input type="submit" value="Modifier" />
                        </form>
                    </td>
                    <td>
                        <form method="get" action="@("/Reservation/SupprimerReservation/"+reservation.Id)">

                            <input type="submit" value="Supprimer" />
                        </form>
                    </td>
                </tr>
            }


        </table>
    </div>
</body>

</html>
