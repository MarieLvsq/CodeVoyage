@model List<CodeVoyage.Models.Membre>
@{
    ViewBag.Title = "Formulaire";
    Layout = "_LayoutAdmin";
}


<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Liste de membres</title>
</head>
@section content{
    <div class="container mt-3">
        <table class="table">
        <tr>



            <th>

                Nom 

            </th>

            <th>

                Prenom

            </th>

            <th>

                Email

            </th>

            <th>

                Localisation

            </th>

            <th>

                Age

            </th>
            <th>

                User

            </th>



            <th></th>

        </tr>

        @foreach (var membre in Model)
        {
            <tr>
                <td>@membre.Nom</td>
                <td>@membre.Prenom</td>
                <td>@membre.Email</td>
                <td>@membre.Localisation</td>
                <td>@membre.Age</td>
                <td>@membre.User</td>
                <td>
                    <form method="get" action="@("/Membre/ModifierMembre/"+membre.Id)">

                            <button type="submit" class="btn btn-secondary"> Modifier</button>
                        </form>
                </td>
                <td>
                    <form method="get" action="@("/Membre/SupprimerMembre/"+membre.Id)">

                            <button type="submit" class="btn btn-secondary"> Supprimer</button>
                        </form>
                </td>
            </tr>
        }
            <p>

                <button type="submit" class="btn btn-secondary btn-lg"> <a href=@("/Membre/InscriptionMembre") class="link-light text-decoration-none align-self-end">Inscrire un membre</a></button>

            </p>

    </table>
        
    </div>
}