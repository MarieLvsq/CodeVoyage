@model List<CodeVoyage.Models.Partenaire>
@{
    ViewBag.Title = "Formulaire";
    Layout = "_LayoutAdmin";
}

<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Liste des Partenaires</title>
</head>
@section content{
    <div class="container mt-3">
        <table class="table">
        <tr>



            <th>

                Nom

            </th>

            <th>

                Localisation

            </th>

            <th>

                Email

            </th>

            <th>

                Numéro de siret

            </th>
            <th>

                Type de Service

            </th>
            <th>

                Rôle

            </th>
            <th></th>

        </tr>

        @foreach (var partenaire in Model)
        {
            <tr>
                <td>@partenaire.Nom</td>
                <td>@partenaire.Localisation</td>
                <td>@partenaire.email</td>
                <td>@partenaire.NumSiret</td>
                <td>@partenaire.TypeService</td>
                <td>@partenaire.Role</td>

                <td>
                    <form method="get" action="@("/Partenaire/ModifierPartenaire/"+partenaire.Id)">

                                    <button type="submit" class="btn btn-secondary"> Modifier</button>
                            </form>
                </td>
                <td>
                    <form method="get" action="@("/Partenaire/SupprimerPartenaire/"+partenaire.Id)">

                            <button type="submit" class="btn btn-secondary"> Supprimer</button>
                    </form>
                </td>
            </tr>
        }
            <p>

                <button type="submit" class="btn btn-secondary btn-lg"> <a href=@("/Partenaire/InscriptionPartenaire") class="link-light text-decoration-none align-self-end">Inscrire un partenaire</a></button>

            </p>

    </table>
       
    </div>
}
