@model List<CodeVoyage.Models.Reservation>
@{
    ViewBag.Title = "Formulaire";

    Layout = "_LayoutAdmin";

}

<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

    <title>Historique de vos réservations</title>

</head>
@section content{
    <div class="container mt-3">
        <table class="table">
            <tr>



                <th>


                    Itinéraire


                </th>

                <th>


                   Evenement

                </th>

                <th>

                    Service

                </th>

                <th>

                    Service Extra

                </th>

                <th>

                    Prix

                </th>
                



                <th></th>


            </tr>

            @foreach (var reservation in Model)
            {
                <tr>

                    <td>@reservation.OffrePayee.Itineraire.ItineraireDescription</td>
                    <td>@reservation.OffrePayee.Event.EvenementDescription</td>
                    <td>@reservation.OffrePayee.Service.ServiceDescription</td>
                    <td>@reservation.OffrePayee.ServiceEx.ServiceDescription</td>
                    <td>@reservation.OffrePayee.prixTotal</td>
                    
                    <td>
                        
                            <input type="submit" value="Faire une demande de remboursement" />
                        
                    </td>
                    

                </tr>
            }


        </table>
        
    </div>
}