@model List<CodeVoyage.Models.OffreVoyage>
@{
    ViewBag.Title = "Liste des Offres de Voyages";
    Layout = "_LayoutAdmin";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Liste des offres de voyages</title>
</head>
<body>
    

    <div class="container mt-3">
        <table class="table">
        <tr>



            <th>

               Evenement

                </th>

            <th>

               Lieu de départ

            </th>

            <th>

                Destination

            </th>
            <th>

               Date de départ

            </th>
            <th>

              Date de retour

             </th>

            <th>

                Service 

            </th>
            <th>

                Service Extra

            </th>
            <th>

                Service Extra

            </th>

            <th>

                Prix Total

            </th>

            <th></th>

        </tr>

        @foreach (var offreVoyage in Model)
        {
            <tr>
                
                <td>@offreVoyage.Event.Nom</td>
                <td>@offreVoyage.Itineraire.LieuDepart </td>
                <td>@offreVoyage.Itineraire.Destination</td>
                <td>@offreVoyage.Itineraire.DateDepart</td>
                <td>@offreVoyage.Itineraire.DateArrivee</td>
                <td>@offreVoyage.Service.ServiceDescription</td>
                <td>@offreVoyage.ServiceEx.ServiceDescription</td>
                <td>@offreVoyage.prixTotal €</td>
                <td>
                    <form method="get" action="@("/OffreVoyage/ModifierOffreVoyage/"+offreVoyage.Id)">

                        <input type="submit" value="Modifier" />
                    </form>
                </td>
                <td>
                    <form method="get" action="@("/OffreVoyage/SupprimerOffreVoyage/"+offreVoyage.Id)">

                        <input type="submit" value="Supprimer" />
                    </form>
                </td>
            </tr>
        }


    </table>
    </div>
    
</body>


</html>
