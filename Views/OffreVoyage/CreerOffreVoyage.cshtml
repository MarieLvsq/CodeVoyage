@model CodeVoyage.ViewModels.OffreViewModel
@{
    ViewBag.Title = "Formulaire";
    Layout = "_LayoutDuSite";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CréerOffreVoyage</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        <fieldset>
            <legend>Proposer une offreVoyage: </legend>
            @Html.LabelFor(m => Model.Itineraires)
            @Html.DropDownListFor(m => Model.Itineraires, new SelectList(Model.Itineraires, "Départ", "Destination"), "Selectionner un itinéraire")            
           
            <br />
            @Html.LabelFor(m => Model.Evenements)
            @Html.DropDownListFor(m => Model.Evenements, new SelectList(Model.Evenements, "Nom", "Localisation"), "Selectionner un événement")

            <br />
            @Html.LabelFor(m => Model.ServicesdeBase)
            @Html.DropDownListFor(m => Model.ServicesdeBase, new SelectList(Model.ServicesdeBase, "Nom", "Localisation"), "Sélectionnez un service de base")


           @* <br />
            @Html.LabelFor(m => Model.ServicesExtra)
            @Html.TextBoxFor(m => Model.ServicesExtra, new SelectList(Model.ServicesExtra, "Nom", "Localisation"), "Sélectionnez un service extra")
            *@
            <br />
            @Html.LabelFor(m => Model.Remise)
            @Html.TextBoxFor(m => Model.Remise)
           
            <br />
            @Html.LabelFor(m => Model.prixAffiche)
            @Html.TextBoxFor(m => Model.prixAffiche)

            <br />
            @Html.LabelFor(m => Model.prixTotal)
            @Html.TextBoxFor(m => Model.prixTotal)
            
            <input type="submit" value="Ajouter" />
        </fieldset>
    }
</body>
@section Menu{
    <ul>
        <li>@Html.ActionLink("Accueil", "Index","Home")</li>
        <li>@Html.ActionLink("Ajout de service", "CreerService", "Service")</li>
        <li>@Html.ActionLink("Ajout d'Evenement", "CreerEvenement", "Evenement")</li>
        <li class ="selectionne">@Html.ActionLink("Ajout offreVoyage", "CreerOffreVoyage", "OffreVoyage")</li>

        
    </ul>
}
</html>
