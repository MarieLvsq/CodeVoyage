@model CodeVoyage.Models.Membre
@{
    ViewBag.Title = "Formulaire";
    Layout = "_LayoutDuSite";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>ModifierMembre</title>
</head>
<body>
    @using (Html.BeginForm())
        {
        <fieldset>

            <table align="center" text-align="center">
                <tr>
                    <th>
                        Modifier un membre

                    </th>

                </tr>
                <tr>
                    <td>
                        @Html.LabelFor(m => Model.Nom)
                    </td>
                </tr>
                <tr>
                    <td class="form-control">
                        @Html.TextBoxFor(m => Model.Nom)
                        @Html.ValidationMessageFor(m => Model.Nom)
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.LabelFor(m => Model.Prenom)
                    </td>
                </tr>
                <tr>
                    <td class="form-control">
                        @Html.TextBoxFor(m => Model.Prenom)
                        @Html.ValidationMessageFor(m => Model.Prenom)
                    </td>
                </tr>

                <tr>
                    <td>
                        @Html.LabelFor(m => Model.Email)
                    </td>
                </tr>
                <tr>
                    <td class="form-control">
                        @Html.TextBoxFor(m => Model.Email)
                        @Html.ValidationMessageFor(m => Model.Email)
                    </td>
                </tr>

                <tr>
                    <td>
                        @Html.LabelFor(m => Model.Localisation)
                    </td>
                </tr>
                <tr>
                    <td class="form-control">
                        @Html.TextBoxFor(m => Model.Localisation)
                        @Html.ValidationMessageFor(m => Model.Localisation)
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.LabelFor(m => Model.Age)
                    </td>
                </tr>
                <tr>
                    <td class="form-control">
                        @Html.TextBoxFor(m => Model.Age)
                        @Html.ValidationMessageFor(m => Model.Age)
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.LabelFor(m => Model.User )
                    </td>
                </tr>
                <tr>
                    <td class="form-control">
                        @Html.DropDownListFor(m => m.User, Html.GetEnumSelectList<CodeVoyage.Models.Role>(), "Vous êtes")
                        @Html.ValidationMessageFor(m => Model.User)
                    </td>
                </tr>

                <tr>
                    <td>
                        <button type="submit" class="btn btn-secondary">Modifier</button>
                    </td>
                </tr>
                </table>
        </fieldset>


    }
    <script type="text/javascript" src="~/Scripts/jquery-3.3.1.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.validate-vsdoc.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.validate.unobtrusive.js"></script>
</body>
</html>


