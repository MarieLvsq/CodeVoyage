@model List<CodeVoyage.Models.OffrePerso>
    @{
        ViewBag.Title = "Liste des Offres personnelles";
        Layout = "_LayoutMembre";
    }
    <!DOCTYPE html>

    <html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
        <title>Liste des offres de voyages</title>
    </head>
    <body>


        <div class="container mt-3">
            <table class="table">
                <tr>



                    <th>

                        Evenement

                    </th>

                    <th>

                        Lieu de départ

                    </th>

                    <th>

                        Destination

                    </th>
                    <th>

                        Date de départ

                    </th>
                    <th>

                        Date de retour

                    </th>

                    <th>

                        Service

                    </th>
                    <th>

                        Service Extra

                    </th>
                    <th>

                        Service Extra

                    </th>

                    <th>

                        Prix Total

                    </th>

                    <th></th>

                </tr>

                @foreach (var offrePerso in Model)
                {
                    <tr>

                        <td>@offrePerso.Offre.Event.EvenementDescription</td>
                        <td>@offrePerso.Offre.Itineraire.LieuDepart </td>
                        <td>@offrePerso.Offre.Itineraire.Destination</td>
                        <td>@offrePerso.Offre.Itineraire.DateDepart.ToShortDateString()</td>
                        <td>@offrePerso.Offre.Itineraire.DateRetour.ToShortDateString()</td>
                        <td>@offrePerso.Offre.Service.ServiceDescription</td>
                        <td>@offrePerso.Offre.ServiceEx.ServiceDescription</td>


                        <td>
                            <form method="get" action="@("")>

                                <input type="submit" value="Réserver" />
                            </form>

                        </td>
                    </tr>

                }


            </table>
        </div>

    </body>


</html>

