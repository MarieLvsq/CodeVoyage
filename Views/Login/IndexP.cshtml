@model CodeVoyage.ViewModels.PartenaireViewModel

@{
    ViewBag.Title = "Formulaire";
    Layout = "_LayoutDuSite";
}


@section content{
@if (Model.AuthentifierP)
{
    <br />
    <br />
    <br />
    <h3>
        <span>
                    Vous êtes déjà authentifié avec le login :
                    @Model.Partenaire.Nom
        </span>

       
       
        <span class="align-self-end">
                    <button type="submit" class="btn btn-secondary btn-lg"> <a href=@("/Login/DeconnexionP") class="link-light text-decoration-none">Voulez-vous vous déconnecter ?</a></button>

        </span>
        <span class="align-self-end">
                <button type="submit" class="btn btn-secondary btn-lg"> <a href=@("/Partenaire/EspacePartenaire") class="link-light text-decoration-none">Revenez à votre Espace</a></button>
        </span>
           

    </h3>
   <br />
   <br />
   <br />
   
}
else
{

    using (Html.BeginForm())
    {
            <table align="center" text-align="center">
                <tr>
                    <th>
                        Veuillez vous authentifier :
                    </th>

                </tr>
                <tr>
                    <td>
                        @Html.LabelFor(m => m.Partenaire.email)
                    </td>
                </tr>
                <tr>
                    <td class="form-control">
                        @Html.TextBoxFor(m => m.Partenaire.email)
                        @Html.ValidationMessageFor(m => m.Partenaire.email)
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.LabelFor(m => m.Partenaire.MotDePasse)
                    </td>
                </tr>
                <tr>
                    <td class="form-control">
                        @Html.PasswordFor(m => m.Partenaire.MotDePasse)
                        @Html.ValidationMessageFor(m => m.Partenaire.MotDePasse)
                    </td>
                </tr>
                <tr>
                    <td>
                        <button type="submit" class="btn btn-secondary"> Se connecter</button>

                    </td>
                </tr>

            </table>

            <button type="submit" class="btn btn-secondary"><a href="@("/Login/CreerComptePartenaire/")" class="text-decoration-none link-light")> Devenez partenaire</a></button>
    }
}
}