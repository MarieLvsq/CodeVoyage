@model CodeVoyage.Models.OffreVoyage
@{
    ViewBag.Title = "Formulaire";
    Layout = "_LayoutDuSite";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Je procède  à la réservation </title>
</head>
<body>
    @using (Html.BeginForm())
    {
        <fieldset>
            <legend>Réserver votre voyage :</legend>
            @Html.HiddenFor(m=>m.Id)
            <div>Evênement Sélectionné :@Html.DisplayFor(m=>m.Event.Nom)</div>
            <div>Moyen de transport :@Html.DisplayFor(m=>m.Itineraire.Transport)</div>
            <div>Lieu de depart :@Html.DisplayFor(m=>m.Itineraire.LieuDepart)</div>
            <div>Destionation :@Html.DisplayFor(m=>m.Itineraire.Destination)</div>
            <div>Date de depart :@Model.Itineraire.DateDepart.ToShortDateString()</div>
            <div>Date d'arrivée :@Html.DisplayFor(m=>m.Itineraire.DateArrivee)</div>
            <div>Nom du service :@Html.DisplayFor(m=>m.Service.nomService)</div>
            <div>Nom du serviceEx :@Html.DisplayFor(m=>m.ServiceEx.nomService)</div>
            <div>Prix total :@Html.DisplayFor(m=>m.prixTotal)</div>
            

            

            
           
            
            
          
            
            
            
            
           
            
            

          
            
        </fieldset>
        <fieldset>
           @* <legend> détails de votre réservation: </legend>
            <div>MembreId.MembreDescription </div>
            <div>ItineraireId.ItineraireDescription, EventId.EvenementDescription, prixTotal € </div>*@
            <input type="submit" value="Payer" />
        </fieldset>
    }
    
    
</body>
</html>