@model CodeVoyage.Models.Partenaire
@{
    ViewBag.Title = "Formulaire";
    Layout = "_LayoutDuSite";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <title> Modifier un Partenaire</title>
</head>
<body>
    @using (Html.BeginForm())
        {
        <fieldset>

            <table align="center" text-align="center">
                <tr>
                    <th>
                        Modifier un partenaire

                    </th>

                </tr>
                <tr>
                    <td>
                        @Html.LabelFor(m => Model.Nom)
                    </td>
                </tr>
                <tr>
                    <td class="form-control">
                        @Html.TextBoxFor(m => Model.Nom)
                        @Html.ValidationMessageFor(m => Model.Nom)
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.LabelFor(m => Model.Localisation)
                    </td>
                </tr>
                <tr>
                    <td class="form-control">
                        @Html.TextBoxFor(m => Model.Localisation)
                        @Html.ValidationMessageFor(m => Model.Localisation)
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.LabelFor(m => Model.email)
                    </td>
                </tr>
                <tr>
                    <td class="form-control">
                        @Html.TextBoxFor(m => Model.email)
                        @Html.ValidationMessageFor(m => Model.email)
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.LabelFor(m => Model.NumSiret)
                    </td>
                </tr>
                <tr>
                    <td class="form-control">
                        @Html.TextBoxFor(m => Model.NumSiret)
                        @Html.ValidationMessageFor(m => Model.NumSiret)
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.LabelFor(m => Model.TypeService)
                    </td>
                </tr>
                <tr>
                    <td class="form-control">
                        @Html.DropDownListFor(m => m.TypeService, Html.GetEnumSelectList<CodeVoyage.Models.TypeService>(), "Selectionner le type de service")
                        @Html.ValidationMessageFor(m => Model.TypeService)
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.LabelFor(m => Model.Role)
                    </td>
                </tr>
                <tr>
                    <td class="form-control">
                        @Html.DropDownListFor(m => m.Role, Html.GetEnumSelectList<CodeVoyage.Models.Role>(), "Sélectionner le rôle")
                        @Html.ValidationMessageFor(m => Model.Role)
                    </td>
                </tr>
                <tr>
                    <td>
                        <button type="submit" class="btn btn-secondary">Modifier</button>
                    </td>
                </tr>
                </table>
        </fieldset>

    }
    <script type="text/javascript" src="~/Scripts/jquery-3.3.1.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.validate-vsdoc.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.validate.unobtrusive.js"></script>
</body>

</html>
