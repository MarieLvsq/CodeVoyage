<!DOCTYPE html>
<html>



<head>


    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>@ViewBag.Title</title>
    <link href="~/css/Site.css" rel="stylesheet" />
    @RenderSection("ExtraCss", required: false)
</head>
<body>
    <header>
        <div id="entete">
            <nav>
                <ul>
                    <li><a href="https://localhost:5001/"><img src="~/Images/LogoBlanc2.png" width="25%" height="25%" /></a></li>
                <li>@Html.ActionLink("Laissez-vous inspirer", "Catalogue", "OffreVoyage")</li>
                <li>@Html.ActionLink("Prenez le controle", "RechercheOffre", "OffreVoyage")</li>
                <li>@Html.ActionLink("A propos", "Apropos", "Home")</li>
                <li>@Html.ActionLink("Connexion", "IndexM", "Login")</li>
                <li>@Html.ActionLink("Proposez vos services", "IndexP", "Login")</li>
                <li>@Html.ActionLink("Admin", "IndexA", "Login")</li>
                </ul>
            </nav>
        </div>
    </header>
   
    <main>
        <div id="contenu">
            <div class="container-fluid text-left">
                <div class="row content">
                    <div class="col-sm-2 sidenav">
                        <img class="avatar avatar-96 bg-light rounded-circle text-white p-2"
                             src="https://raw.githubusercontent.com/twbs/icons/main/icons/person-fill.svg">

                        <li>@Html.ActionLink("Votre historique de voyage", "AfficherToutesLesReservations", "Reservation")</li>
                        <li><a href="#">Messagerie</a></li>

                    </div>

                    <div class="col-sm-8 text-left">
                        <h1>Membre</h1>
                        <hr>
                        @RenderSection("content")
                    </div>
                    <div class="col-sm-2 sidenav">

                        @RenderSection("ajout", required: false)


                    </div>
                </div>
            </div>
    </main>
   <footer>

        <div class="container-fluid mt-5 ">
            <div class="row">

                <div class="col-sm-4">
                    <a href="https://localhost:5001/"><img src="~/Images/LogoCV1.png" width="100%" height="100%" /></a>
                </div>
                <div class="col-sm-2">
                    <h3>Contact</h3>
                    <br />

                    <p>
                        15 rue Felix Faure, 75015 Paris
                        <br />
                        0658245075
                        <br />

                        reservation@codevoyage.com
                        <br />

                        @DateTime.Now.Year - Contactez nous !
                    </p>
                </div>
                <div class="col-sm-3">
                    <h3>A propos</h3>
                    <p>
                        Code Voyage est une startup spécialisée dans
                        l’organisation d'événements.
                        À travers notre site web, nous souhaitons répondre à la demande d’une clientèle
                        spécifique en permettant un accès facilité et personnalisé à des événements à
                        travers le monde.
                    </p>
                </div>
                <div class="col-sm-2">
                    <h3>Plan du site</h3>
                    <ul class="footerUl">
                        <li>@Html.ActionLink("Laissez-vous inspirer", "Catalogue", "OffreVoyage")</li>
                        <li>@Html.ActionLink("Prenez le controle", "RechercheOffre", "OffreVoyage")</li>
                        <li>@Html.ActionLink("A propos", "Apropos", "Home")</li>
                        <li>@Html.ActionLink("Connexion", "IndexM", "Login")</li>
                        <li>@Html.ActionLink("Proposez vos services", "IndexP", "Login")</li>
                        
                    </ul>
                </div>
                <div class="col-sm-1">
                </div>
            </div>
        </div>
   </footer>

</body>
</html>