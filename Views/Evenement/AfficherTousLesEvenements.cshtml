@model List<CodeVoyage.Models.Evenement>
@{
    ViewBag.Title = "Formulaire";
    Layout = "_LayoutDuSite";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Liste des Evènements</title>
</head>
<body>

    <div class="container mt-3">
        <table class="table">

        <tr>



            <th>

                Nom de l'Evènement

            </th>

            <th>

                Date de Début

            </th>
            <th>

                Date de Fin

            </th>
            <th>
            
                Localisation

            </th>


            <th>

                Type d'Evènement

            </th>
            <th></th>

        </tr>

        @foreach (var evenement in Model)
        {
            <tr>
                <td>@evenement.Nom</td>
                <td>@evenement.DateDeb</td>
                <td>@evenement.DateFin</td>
                <td>@evenement.Localisation</td>
                <td>@evenement.TypeEvenement</td>
                
                <td>
                    <form method="get" action="@("/Evenement/ModifierEvenement/"+evenement.Id)">

                        <input type="submit" value="Modifier" />
                    </form>
                </td>
                <td>
                    <form method="get" action="@("/Evenement/SupprimerEvenement/"+evenement.Id)">

                        <input type="submit" value="Supprimer" />
                    </form>
                </td>
            </tr>
        }

    </table>
    </div>

</body>

</html>
