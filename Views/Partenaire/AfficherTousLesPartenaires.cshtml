@model List<CodeVoyage.Models.Partenaire>
@{
    ViewBag.Title = "Formulaire";
    Layout = "_LayoutDuSite";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Liste des Partenaires</title>
</head>
<body>
    <table border="1">

        <tr>



            <th>

                Nom

            </th>

            <th>

                Localisation

            </th>

            <th>

                Email

            </th>

            <th>

                Numéro de siret

            </th>
            <th>

                Type de Service

            </th>
            <th>

                Rôle

            </th>
            <th></th>

        </tr>

        @foreach (var partenaire in Model)
        {
            <tr>
                <td>@partenaire.Nom</td>
                <td>@partenaire.Localisation</td>
                <td>@partenaire.email</td>
                <td>@partenaire.NumSiret</td>
                <td>@partenaire.TypeService</td>
                <td>@partenaire.Role</td>

                <td>
                    <form method="get" action="@("/Partenaire/ModifierPartenaire/"+partenaire.Id)">

                        <input type="submit" value="Modifier" />
                    </form>
                </td>
                <td>
                    <form method="get" action="@("/Partenaire/SupprimerPartenaire/"+partenaire.Id)">

                        <input type="submit" value="Supprimer" />
                    </form>
                </td>
            </tr>
        }


    </table>

</body>

</html>
