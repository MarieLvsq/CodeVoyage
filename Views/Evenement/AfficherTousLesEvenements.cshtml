@model List<CodeVoyage.Models.Evenement>
@{
    ViewBag.Title = "Formulaire";
    Layout = "_LayoutAdmin";
}

<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Liste des Evènements</title>
</head>
@section content{
    <div class="container mt-3">
        <table class="table">

        <tr>



            <th>

                Nom de l'Evènement

            </th>

            <th>

                Date de Début

            </th>
            <th>

                Date de Fin

            </th>
            <th>
            
                Localisation

            </th>


            <th>

                Type d'Evènement

            </th>
            <th></th>

        </tr>

        @foreach (var evenement in Model)
        {
            <tr>
                <td>@evenement.Nom</td>
                <td>@evenement.DateDeb</td>
                <td>@evenement.DateFin</td>
                <td>@evenement.Localisation</td>
                <td>@evenement.TypeEvenement</td>
                
                <td>
                    <form method="get" action="@("/Evenement/ModifierEvenement/"+evenement.Id)">

                            <button type="submit" class="btn btn-secondary"> Modifier</button>
                        </form>
                </td>
                <td>
                    <form method="get" action="@("/Evenement/SupprimerEvenement/"+evenement.Id)">

                            <button type="submit" class="btn btn-secondary"> Supprimer</button>
                        </form>
                </td>
            </tr>


        }
            <p>

                <button type="submit" class="btn btn-secondary btn-lg"> <a href=@("/Evenement/CreerEvenement") class="link-light text-decoration-none align-self-end">Créer un événement</a></button>

            </p>
    </table>
    </div>
   
}