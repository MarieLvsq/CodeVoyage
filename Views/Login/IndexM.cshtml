@model CodeVoyage.ViewModels.MembreViewModel
@{
    ViewBag.Title = "Formulaire";
    Layout = "_LayoutDuSite";
}


@section content{
    @if (Model.AuthentifierM)
    {
        <br />
        <br />
        <br />
        <h3>
            <span>
                Vous êtes déjà authentifié avec le login :
                @Model.Membre.Prenom
            </span>
            

        <span class="align-self-end">
            <button type="submit" class="btn btn-secondary btn-lg"> <a href=@("/Login/DeconnexionM") class="link-light text-decoration-none">Voulez-vous vous déconnecter ?</a></button>

        </span>
        <span class="align-self-end">
            <button type="submit" class="btn btn-secondary btn-lg"> <a href=@("/Membre/EspaceMembre") class="link-light text-decoration-none">Revenez à votre Espace</a></button>
        </span>
        </h3>
       <br />
       <br />
       <br />
    }
    else
    {
        <p>
            Veuillez vous authentifier :
        </p>
        @using (Html.BeginForm())
        {
            //if (User.IsInRole("Admin"))
            //{

            //}
            <div>
                @Html.LabelFor(m => m.Membre.Email)
                @Html.TextBoxFor(m => m.Membre.Email)
                @Html.ValidationMessageFor(m => m.Membre.Email)
            </div>
            <div>
                @Html.LabelFor(m => m.Membre.MotDePasse)
                @Html.PasswordFor(m => m.Membre.MotDePasse)
                @Html.ValidationMessageFor(m => m.Membre.MotDePasse)
            </div>
            <input type="submit" value="Se connecter" />
            <br />
            @Html.ActionLink("Devenez membre CodeVoyage", "CreerCompteMembre", "Login")
        }
    }
}